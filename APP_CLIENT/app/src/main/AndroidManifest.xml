        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Boozy"
        tools:targetApi="31">
        <activity
            android:name=".ui.order.HistoriqueActivity"
            android:exported="false" />
        <activity
            android:name=".ui.delivery.ModifierProfilLivreurActivity"
            android:exported="false" />
        <activity
            android:name=".ui.delivery.ProfilLivreurActivity"
            android:exported="false" />
        <activity
            android:name=".ui.client.ModifierProfilClientActivity"
            android:exported="false" />
        <activity
            android:name=".ui.delivery.LivreurHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.SuiviCommandeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.order.CommandeEnCoursActivity"
            android:exported="false" />
        <activity
            android:name=".ui.client.PaiementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.shop.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.client.ProfilClientActivity"
            android:exported="false" />
        <activity
            android:name=".ui.client.ClientHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegisterDeliveryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegisterClientActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SelectionProfilActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.AuthChoiceActivity"
            android:exported="false"
            android:theme="@style/Theme.Boozy" />
        <activity
            android:name=".ui.shop.ShopDetailActivity"
            android:exported="true" />

        <!-- ActivitÃ© demarrage -->
        <activity
            android:name=".ui.home.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>