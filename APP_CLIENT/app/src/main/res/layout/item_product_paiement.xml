<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Ligne principale : quantitÃ©, nom, prix -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/quantiteText"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:background="#F2F2F2"
            android:textColor="#000000"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/produitText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nom produit"
            android:textColor="#000000"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/prixText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,61 $"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Boutons +, -, supprimer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="start">

        <ImageButton
            android:id="@+id/buttonMinus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retirer"
            android:src="@drawable/ic_remove"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/buttonPlus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            android:contentDescription="Ajouter"
            android:layout_marginStart="8dp"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Supprimer"
            android:layout_marginStart="8dp"
            app:tint="#CC0000" />
    </LinearLayout>
</LinearLayout>
