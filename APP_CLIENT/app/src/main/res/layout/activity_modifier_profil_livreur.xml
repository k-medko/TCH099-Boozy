<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modifier_le_profil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="24dp"
            style="@style/TextStyle"/>

        <!-- Champ : Nom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nom"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            style="@style/TextStyle"/>
        <EditText
            android:id="@+id/editNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@android:color/transparent" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <!-- Champ : Prénom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prenom"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            style="@style/TextStyle"/>
        <EditText
            android:id="@+id/editPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prenom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@android:color/transparent" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <!-- Champ : Téléphone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telephone"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            style="@style/TextStyle"/>
        <EditText
            android:id="@+id/editTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telephone"
            android:inputType="phone"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@android:color/transparent" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <!-- Champ : Plaque -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/num_de_plaque"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            style="@style/TextStyle"/>
        <EditText
            android:id="@+id/editPlaque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/num_de_plaque"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@android:color/transparent" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <!-- Champ : Courriel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/courriel"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            style="@style/TextStyle"/>
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/courriel"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@android:color/transparent" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD" />

        <!-- Mot de passe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="12dp">

            <TextView
                android:text="@string/mot_de_passe"
                android:textStyle="bold"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mdp"
                android:inputType="textPassword"
                android:background="@null"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Bouton Enregistrer -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEnregistrerProfilLivreur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enregistrer_les_modifications"
            android:backgroundTint="#5D3A1A"
            android:textColor="#FFFFFF"
            android:minHeight="48dp"
            android:layout_margin="24dp"
            android:background="@drawable/button_square" />
    </LinearLayout>
</ScrollView>
