<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="1dp"
    android:padding="0dp"
    android:backgroundTint="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Ligne 1 : Numéro de clientOrder -->
    <TextView
        android:id="@+id/numeroCommande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commande #1234"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <!-- Ligne 2 : Temps approximatif -->
    <TextView
        android:id="@+id/tempsEstimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temps approximatif : 25–32 minutes"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <!-- Ligne 3 : Montant -->
    <TextView
        android:id="@+id/paiementText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Montant : 6$"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <!-- Ligne 4 : Bouton Accepter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accepterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepter"
            android:textAllCaps="false"
            android:backgroundTint="#5C3A2E"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="6dp"
            android:background="@drawable/button_square" />
    </LinearLayout>
</LinearLayout>
