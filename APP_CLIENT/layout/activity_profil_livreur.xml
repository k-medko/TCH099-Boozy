<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Barre du haut : flèche + titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profil"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/TextStyle"/>
        </LinearLayout>

        <!-- Ligne séparatrice -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <!-- Icône véhicule -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_delivery_avatar"
            android:contentDescription="Icône de livraison"
            app:tint="#5C3A2E" />

        <!-- Montant -->
        <TextView
            android:id="@+id/soldeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="254,33$"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/btnModifierCarte"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/button_square"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                android:layout_marginEnd="8dp"
                android:contentDescription="Modifier"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modifier_le_profil"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Bouton Déconnexion -->
        <TextView
            android:id="@+id/btnDeconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/se_deconnecter"
            android:textColor="#C62828"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Infos utilisateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginTop="32dp" />

        <!-- Ligne : Nom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nom"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/nomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E6E6E6" />

        <!-- Ligne : Prénom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/prenom"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/prenomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E6E6E6" />

        <!-- Ligne : Téléphone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/telephone"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/telephoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E6E6E6" />

        <!-- Ligne : Courriel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/courriel"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E6E6E6" />

        <!-- Ligne : Permis de conduire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Permis de conduire"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/permisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
